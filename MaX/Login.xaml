<Window x:Class="MaX.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#2C3E50"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <TextBlock Text="Введите никнейм:" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox x:Name="Nik" Height="45" Margin="0,90,0,0" FontSize="16" Padding="10" HorizontalAlignment="Stretch" Background="#34495E" Foreground="White" BorderThickness="0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="Whod" Content="Войти" Height="40" Margin="0,150,0,0" Background="#1ABC9C" Foreground="White" FontSize="16" BorderThickness="0" Cursor="Hand" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="Whod_Click"/>
    </Grid>
</Window>
